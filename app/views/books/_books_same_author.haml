%ul.books
  - @book.sameAuthor.each do |book|
    %li
      %a{:href => book_url(book), :title => book.title }
        = image_tag book.photo.url(:small)
      .info
        %span.fn
          %a{:href => book_url(book), :title => book.title }
            = book.title
          by 
          = book.author
      .clear

