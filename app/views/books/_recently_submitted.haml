%ul.books
  - Book.recently_submited(3).each do |book|
    %li
      %a{:href => book_url(book), :title => book.title }
        = image_tag book.photo.url(:small)
      .info
        %span.fn
          %a{:href => book_url(book), :title => book.title }
            = truncate(book.title, :length => 50)
          by 
          = truncate(book.author, :length => 50)
      .clear

.see_all
  = link_to "See All", books_path(:type => "latest")