- title 'My Profile :: Points and Badges'
- section 'people'

- content_for :sub_nav do
  %ul
    %li= link_to 'General', profile_path
    %li= link_to 'Network', updates_profile_path
    %li= link_to 'Websites', websites_submissions_profile_path
    %li= link_to 'Jobs', jobs_submissions_profile_path
    %li= link_to 'Books', books_submissions_profile_path
    %li= link_to 'Settings', privacy_profile_path

.two-columns-body
  %h2.title
    Points and Badges

  %p
    %strong UX Points:
    = h @person.total_points
  %p
    %strong Badges:
    = h @person.total_gold_badges
    Gold
    = h @person.total_silver_badges
    Silver
    = h @person.total_bronze_badges
    Bronze

  %h2.subtitle
    Where do you got your Points and Badges?

  %table{:cellspacing => 0}
    %thead
      %tr
        %td When
        %td How many
        %td Why
    - @points.each do |earned_point|
      %tr
        %td= earned_point.created_at.strftime('%a, %b %d %Y, %R')
        %td.right= earned_point.point.quantity
        %td= earned_point.point.reason

  = will_paginate @points

= render :partial => 'sidebar', :locals => { :element => @person, :section => 'general', :page => 'points' }

